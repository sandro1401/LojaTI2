@model IEnumerable<ClienteModel>
@{
    ViewBag.Subtitulo = "Clientes";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">Novo Cliente</a>
    </div>
</header>
<hr>


@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-clientes">
        <thead>
            <tr>
                <th> Nome</th>
                <th> CPF</th>
                <th> DataNascimento</th>
                <th> Email</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.CPF</td>
                    <td>@cliente.DataNascimento</td>
                    <td>@cliente.Email</td>
                    <td>
                        <a asp-action="Index" asp-controller="PedidoModels" asp-route-id="@cliente.Id" class="btn btn-sm btn-info"><i class="bi-cart" title="Pedidos"></i></a>
                        <a asp-action="Index" asp-controller="EnderecoModels" asp-route-id="@cliente.Id" class="btn btn-sm btn-success"><i class="bi-mailbox" title="Endereços"></i></a>
                        <a asp-action="Edit" asp-route-id="@cliente.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@cliente.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@cliente.Id">Delete</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhum cliente cadastrado.</p>
}