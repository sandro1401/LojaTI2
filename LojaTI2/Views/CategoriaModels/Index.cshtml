@model IEnumerable<LojaTI2.Models.CategoriaModel>

@{
    ViewBag.Subtitulo = "Listagem de Categorias";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">Nova Categoria</a>
    </div>
</header>


@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-categorias">
        <thead>
            <tr>
                <th>Nome</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nome</td>
                    <td>
                        
                        <a asp-action="Edit" asp-route-id="@categoria.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@categoria.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@categoria.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma categoria cadastrada.</p>
}
